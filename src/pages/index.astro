---
import MainLayout from "../layouts/MainLayout.astro";
import OptimizedImage from "../components/OptimizedImage.astro";
import HeroImage from "../components/HeroImage.astro";
import PricingCard from "../components/pricing/PricingCard.astro";
import FeatureBox from "../components/ui/FeatureBox.astro";
import Icon from "../components/Icon.astro";
---

<MainLayout
	title="AmericaPlay - Streaming IPTV Premium | +1000 Canales en Vivo"
	description="Disfruta de más de 1000 canales en vivo, películas, series y deportes con AmericaPlay IPTV. Planes desde $9.99/mes. Calidad HD/4K."
>
	<!-- Hero Section -->
	<HeroImage
		src="/images/Banner_hero.webp"
		alt="AmericaPlay Streaming"
		height="full"
		overlayOpacity={80}
		class="hero-image-responsive"
	>
		<section class="relative w-full pt-20">
			<!-- Hexagon Pattern Overlay -->
			<div
				class="absolute inset-0 opacity-10 pointer-events-none"
				style="background-image: url('data:image/svg+xml,%3Csvg width=\'100\' height=\'100\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cpath d=\'M50 0L93.3 25L93.3 75L50 100L6.7 75L6.7 25Z\' fill=\'none\' stroke=\'%2300d9ff\' stroke-width=\'1\'/%3E%3C/svg%3E'); background-size: 200px;"
			>
			</div>

			<div
				class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20"
			>
				<div class="grid lg:grid-cols-2 gap-12 items-center">
					<!-- Hero Text -->
					<div class="text-center lg:text-left">
						<h1
							class="text-5xl md:text-6xl lg:text-7xl font-extrabold mb-6 leading-tight"
						>
							<span
								class="bg-gradient-to-r from-white to-primary-200 bg-clip-text text-transparent"
							>
								Televisión Entretenida
							</span>
							<br />
							<span class="text-secondary-400">Sin Límites</span>
						</h1>

						<p
							class="text-xl md:text-2xl text-white/80 mb-8 leading-relaxed"
						>
							Más de 1000 canales, películas, series y deportes en
							vivo. Calidad HD/4K desde cualquier dispositivo.
						</p>

						<div
							class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start"
						>
							<a href="#planes" class="btn-primary">
								Ver Planes
							</a>
							<a href="/contacto" class="btn-secondary">
								Prueba Gratis 24h
							</a>
						</div>

						<p class="mt-6 text-primary-300 text-sm">
							Precio de lanzamiento desde <span
								class="font-bold text-secondary-400 text-lg"
								>$7/mes</span
							>
						</p>
					</div>

					<!-- Espacio vacío donde estaba la imagen -->
					<div class="hidden lg:block"></div>
				</div>
			</div>
		</section>
	</HeroImage>

	<!-- Por qué AmericaPlay -->
	<section class="py-20 bg-blue-900/30">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-16">
				<h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
					¿Por Qué Elegirnos?
				</h2>
				<p class="text-xl text-white/70 max-w-2xl mx-auto">
					No solo ofrecemos streaming, creamos experiencias de
					entretenimiento inolvidables
				</p>
			</div>

			<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
				<div class="value-card">
					<div class="value-icon">
						<Icon name="zap" class="h-10 w-10 text-dark-900" />
					</div>
					<h3 class="text-xl font-bold text-white mb-3">
						Experiencia Comprobada
					</h3>
					<p class="text-white/70">
						Años especializados en streaming IPTV de alto
						rendimiento y calidad superior
					</p>
				</div>

				<div class="value-card">
					<div class="value-icon">
						<Icon name="sparkles" class="h-10 w-10 text-dark-900" />
					</div>
					<h3 class="text-xl font-bold text-white mb-3">
						Interfaz Excepcional
					</h3>
					<p class="text-white/70">
						Plataforma intuitiva que tus usuarios amarán desde el
						primer momento
					</p>
				</div>

				<div class="value-card">
					<div class="value-icon">
						<Icon name="wrench" class="h-10 w-10 text-dark-900" />
					</div>
					<h3 class="text-xl font-bold text-white mb-3">
						Soporte 24/7
					</h3>
					<p class="text-white/70">
						Estamos contigo en cada paso, antes, durante y después
						de tu suscripción
					</p>
				</div>

				<div class="value-card">
					<div class="value-icon">
						<Icon name="palette" class="h-10 w-10 text-dark-900" />
					</div>
					<h3 class="text-xl font-bold text-white mb-3">
						Tecnología de Punta
					</h3>
					<p class="text-white/70">
						Usamos las últimas tecnologías para garantizar calidad y
						rendimiento
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Planes IPTV -->
	<section
		id="planes"
		class="py-20 bg-gradient-to-br from-dark-900 to-dark-800 relative overflow-hidden"
	>
		<!-- Gradient Overlay -->
		<div
			class="absolute inset-0 bg-gradient-to-b from-primary-500/5 to-transparent pointer-events-none"
		>
		</div>

		<div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-16">
				<h2 class="text-4xl md:text-5xl font-bold mb-4">
					<span class="text-secondary-400">America</span><span
						class="text-white">Play</span
					> IPTV Premium
				</h2>
				<p class="text-xl text-white/70 max-w-2xl mx-auto">
					Más de 1000 canales, películas, series y deportes en vivo.
					Elige el plan perfecto para ti.
				</p>
			</div>

			<!-- Toggle Switch -->
			<div class="flex justify-center mb-12">
				<div
					class="bg-dark-900/50 p-1 rounded-full border border-primary-500/30 inline-flex relative"
				>
					<div
						id="toggle-bg"
						class="absolute top-1 left-1 w-[calc(50%-4px)] h-[calc(100%-8px)] bg-primary-600 rounded-full transition-all duration-300 ease-in-out"
					>
					</div>
					<button
						id="btn-3-devices"
						class="relative z-10 px-6 py-2 rounded-full text-white font-bold transition-colors duration-300"
						onclick="switchPricing('3')"
					>
						3 Dispositivos
					</button>
					<button
						id="btn-5-devices"
						class="relative z-10 px-6 py-2 rounded-full text-white/70 font-bold transition-colors duration-300 hover:text-white"
						onclick="switchPricing('5')"
					>
						5 Dispositivos
					</button>
				</div>
			</div>

			<!-- 3 Devices Grid -->
			<div
				id="pricing-3-devices"
				class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 transition-all duration-500 opacity-100"
			>
				<PricingCard
					name="Plan Mensual"
					duration="1 Mes"
					price="7"
					period="por mes"
					devices="3 dispositivos simultáneos"
					features={[
						"+1000 canales en vivo",
						"+90 canales deportivos",
						"Películas, series y animes",
						"Zona Kids protegida",
						"Calidad HD/4K",
						"Contenido adultos +18",
					]}
				/>

				<PricingCard
					name="Plan 4 Meses"
					duration="3 + 1 Meses Gratis"
					price="15"
					period="por 4 meses"
					devices="3 dispositivos simultáneos"
					popular={true}
					features={[
						"+1000 canales en vivo",
						"+90 canales deportivos",
						"Películas, series y animes",
						"Zona Kids protegida",
						"Calidad HD/4K",
						"Contenido adultos +18",
					]}
				/>

				<PricingCard
					name="Plan 8 Meses"
					duration="6 + 2 Meses Gratis"
					price="25"
					period="por 8 meses"
					devices="3 dispositivos simultáneos"
					features={[
						"+1000 canales en vivo",
						"+90 canales deportivos",
						"Películas, series y animes",
						"Zona Kids protegida",
						"Calidad HD/4K",
						"Contenido adultos +18",
					]}
				/>
			</div>

			<!-- 5 Devices Grid -->
			<div
				id="pricing-5-devices"
				class="hidden grid md:grid-cols-2 lg:grid-cols-3 gap-6 transition-all duration-500 opacity-0 transform translate-y-4"
			>
				<PricingCard
					name="Plan 15 Meses"
					duration="12 + 3 Meses Gratis"
					price="45"
					period="por 15 meses"
					devices="5 dispositivos simultáneos"
					features={[
						"+1000 canales en vivo",
						"+90 canales deportivos",
						"Películas, series y animes",
						"Zona Kids protegida",
						"Calidad HD/4K",
						"Contenido adultos +18",
					]}
				/>

				<PricingCard
					name="Plan 30 Meses"
					duration="24 + 6 Meses Gratis"
					price="75"
					period="por 30 meses"
					devices="5 dispositivos simultáneos"
					popular={true}
					features={[
						"+1000 canales en vivo",
						"+90 canales deportivos",
						"Películas, series y animes",
						"Zona Kids protegida",
						"Calidad HD/4K",
						"Contenido adultos +18",
					]}
				/>

				<PricingCard
					name="Plan Perpetuo"
					duration="Acceso Vitalicio"
					price="99"
					period="pago único"
					devices="5 dispositivos simultáneos"
					highlight="Mejor Inversión"
					features={[
						"Acceso de por vida",
						"Sin pagos mensuales",
						"+1000 canales en vivo",
						"Películas, series y animes",
						"Calidad HD/4K",
						"Soporte Prioritario VIP",
					]}
				/>
			</div>
		</div>
	</section>

	<script is:inline>
		function switchPricing(devices) {
			const btn3 = document.getElementById("btn-3-devices");
			const btn5 = document.getElementById("btn-5-devices");
			const bg = document.getElementById("toggle-bg");
			const grid3 = document.getElementById("pricing-3-devices");
			const grid5 = document.getElementById("pricing-5-devices");

			if (devices === "3") {
				// Update buttons
				btn3.classList.remove("text-white/70");
				btn3.classList.add("text-white");
				btn5.classList.remove("text-white");
				btn5.classList.add("text-white/70");

				// Move background
				bg.style.transform = "translateX(0)";

				// Show grid 3
				grid3.classList.remove("hidden");
				// Small delay to allow display:block to apply before opacity transition
				setTimeout(() => {
					grid3.classList.remove("opacity-0", "translate-y-4");
					grid3.classList.add("opacity-100", "translate-y-0");
				}, 10);

				// Hide grid 5
				grid5.classList.remove("opacity-100", "translate-y-0");
				grid5.classList.add("opacity-0", "translate-y-4");
				setTimeout(() => {
					grid5.classList.add("hidden");
				}, 300);
			} else {
				// Update buttons
				btn5.classList.remove("text-white/70");
				btn5.classList.add("text-white");
				btn3.classList.remove("text-white");
				btn3.classList.add("text-white/70");

				// Move background
				bg.style.transform = "translateX(100%)";

				// Show grid 5
				grid5.classList.remove("hidden");
				setTimeout(() => {
					grid5.classList.remove("opacity-0", "translate-y-4");
					grid5.classList.add("opacity-100", "translate-y-0");
				}, 10);

				// Hide grid 3
				grid3.classList.remove("opacity-100", "translate-y-0");
				grid3.classList.add("opacity-0", "translate-y-4");
				setTimeout(() => {
					grid3.classList.add("hidden");
				}, 300);
			}
		}
	</script>

	<!-- Qué Incluye -->
	<section class="py-20 bg-blue-900/30">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-16">
				<h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
					¿Qué Incluye AmericaPlay?
				</h2>
				<p class="text-xl text-white/70">
					Todo el entretenimiento que necesitas en un solo lugar
				</p>
			</div>

			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
				<FeatureBox
					icon="film"
					title="Películas"
					description="Miles de películas en HD y 4K. Desde clásicos hasta los últimos estrenos del cine."
				/>

				<FeatureBox
					icon="tv"
					title="Series de TV"
					description="Las mejores series del momento con nuevos episodios cada semana."
				/>

				<FeatureBox
					icon="baby"
					title="Kids Zone"
					description="Contenido seguro y educativo para los más pequeños del hogar."
				/>

				<FeatureBox
					icon="trophy"
					title="Deportes en Vivo"
					description="+90 canales deportivos. No te pierdas ningún partido o evento importante."
				/>

				<FeatureBox
					icon="smartphone"
					title="Multi-dispositivo"
					description="Ve en Smart TV, celular, tablet, PC o cualquier dispositivo."
				/>

				<FeatureBox
					icon="globe"
					title="Sin Restricciones"
					description="Acceso desde cualquier lugar del mundo, sin bloqueos regionales."
				/>
			</div>
		</div>
	</section>

	<!-- Reseller CTA -->
	<section
		class="py-16 bg-gradient-to-r from-secondary-400/20 to-secondary-400/10 border-y-2 border-secondary-400/30"
	>
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
			<h3 class="text-3xl font-bold text-secondary-400 mb-4">
				Únete a Nuestro Programa de Resellers
			</h3>
			<p class="text-xl text-white/80 mb-8">
				Maximiza tus ganancias revendiendo nuestros servicios premium.
				Comisiones atractivas y soporte completo.
			</p>
			<a href="/reseller#planes" class="btn-primary">
				Quiero Ser Reseller
			</a>
		</div>
	</section>

	<!-- CTA Final -->
	<section
		class="py-20 bg-gradient-to-br from-dark-900 to-blue-900 relative overflow-hidden"
	>
		<div
			class="absolute inset-0 opacity-10"
			style="background: radial-gradient(circle at 50% 50%, rgba(0, 217, 255, 0.2) 0%, transparent 70%);"
		>
		</div>

		<div
			class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center"
		>
			<h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
				¿Listo Para Comenzar?
			</h2>
			<p class="text-xl text-white/80 mb-8">
				Únete a miles de usuarios satisfechos y disfruta del mejor
				streaming IPTV
			</p>
			<div class="flex flex-col sm:flex-row gap-4 justify-center">
				<a href="/contacto" class="btn-primary"> Contactar Ahora </a>
				<a href="/contacto" class="btn-secondary"> WhatsApp </a>
			</div>
		</div>
	</section>
</MainLayout>
