---
import Icon from "./Icon.astro";
---

<footer class="bg-dark-900 border-t border-primary-500/10">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
		<!-- Main Footer Content -->
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
			<!-- Company Info -->
			<div>
				<h4 class="text-secondary-400 font-bold text-lg mb-4">
					AmericaPlay
				</h4>
				<p class="text-white/70 text-sm leading-relaxed mb-4">
					Creamos plataformas tecnológicas OTT/IPTV y ofrecemos
					servicios premium de streaming.
				</p>
				<p class="text-primary-300 text-sm font-semibold">
					Tu socio tecnológico de confianza
				</p>
			</div>

			<!-- Para Empresas -->
			<div>
				<h4 class="text-secondary-400 font-bold text-lg mb-4">
					Para Empresas
				</h4>
				<ul class="space-y-2">
					<li>
						<a href="/servicios#ott" class="footer-link">
							Plataformas OTT/IPTV
						</a>
					</li>
					<li>
						<a href="/servicios#desarrollo" class="footer-link">
							Desarrollo Web & Mobile
						</a>
					</li>
					<li>
						<a href="/servicios#empresariales" class="footer-link">
							Soluciones Empresariales
						</a>
					</li>
					<li>
						<a href="/servicios#custom" class="footer-link">
							Desarrollo a Medida
						</a>
					</li>
				</ul>
			</div>

			<!-- Para Usuarios -->
			<div>
				<h4 class="text-secondary-400 font-bold text-lg mb-4">
					Para Usuarios
				</h4>
				<ul class="space-y-2">
					<li>
						<a href="/planes" class="footer-link"> Planes IPTV </a>
					</li>
					<li>
						<a href="/reseller" class="footer-link">
							Programa de Resellers
						</a>
					</li>
					<li>
						<a href="/contacto" class="footer-link">
							Prueba Gratis 24h
						</a>
					</li>
					<li>
						<a href="/contacto#faq" class="footer-link">
							Preguntas Frecuentes
						</a>
					</li>
				</ul>
			</div>

			<!-- Contacto -->
			<div>
				<h4 class="text-secondary-400 font-bold text-lg mb-4">
					Contacto
				</h4>
				<ul class="space-y-3">
					<li>
						<a
							href="mailto:contacto@americaplay.com"
							class="footer-link-contact"
						>
							<Icon
								name="mail"
								class="h-5 w-5 text-primary-400"
							/>
							<span>contacto@americaplay.com</span>
						</a>
					</li>
					<li>
						<a
							href="/contacto#distribuidores"
							class="footer-link-contact"
						>
							<Icon
								name="phone"
								class="h-5 w-5 text-primary-400"
							/>
							<span>Contactar</span>
						</a>
					</li>
					<li>
						<a
							href="/contacto#distribuidores"
							class="footer-link-contact"
						>
							<Icon
								name="message-circle"
								class="h-5 w-5 text-primary-400"
							/>
							<span>Contactar</span>
						</a>
					</li>
				</ul>
				<p class="text-primary-300 text-sm mt-4 font-medium">
					Disponible 24/7
				</p>
			</div>
		</div>

		<!-- Divider -->
		<div class="border-t border-primary-500/10 my-8"></div>

		<!-- Bottom Footer -->
		<div
			class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0"
		>
			<p class="text-white/60 text-sm">
				&copy; {new Date().getFullYear()} AmericaPlay. Todos los derechos
				reservados.
			</p>

			<div class="flex space-x-6">
				<a
					href="/terminos"
					class="text-white/60 hover:text-primary-300 text-sm transition"
				>
					Términos de Servicio
				</a>
				<a
					href="/privacidad"
					class="text-white/60 hover:text-primary-300 text-sm transition"
				>
					Política de Privacidad
				</a>
			</div>
		</div>
	</div>
</footer>
