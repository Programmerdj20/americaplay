---
/**
 * ColorPalette Component
 * Muestra todos los colores de la paleta de AmericaPlay
 * Útil para referencia durante el desarrollo
 */

const colors = {
	primary: {
		name: 'Primary (Cyan)',
		description: 'Color del botón play y acentos tecnológicos',
		shades: ['50', '100', '200', '300', '400', '500', '600', '700', '800', '900', '950']
	},
	secondary: {
		name: 'Secondary (Dorado)',
		description: 'Color del texto "AMERICA"',
		shades: ['50', '100', '200', '300', '400', '500', '600', '700', '800', '900', '950']
	},
	dark: {
		name: 'Dark (Azul Oscuro)',
		description: 'Fondo principal del logo',
		shades: ['50', '100', '200', '300', '400', '500', '600', '700', '800', '900', '950']
	},
	blue: {
		name: 'Blue (Azul Royal)',
		description: 'Mapa mundial y elementos secundarios',
		shades: ['50', '100', '200', '300', '400', '500', '600', '700', '800', '900', '950']
	},
	accent: {
		name: 'Accent (Cyan Brillante)',
		description: 'Hexágonos y highlights',
		shades: ['50', '100', '200', '300', '400', '500', '600', '700', '800', '900', '950']
	}
};
---

<div class="p-8 bg-gray-50 min-h-screen">
	<div class="max-w-7xl mx-auto">
		<div class="mb-8">
			<h1 class="text-4xl font-bold mb-2">
				<span class="text-secondary-400">America</span><span class="text-dark-900">Play</span> - Paleta de Colores
			</h1>
			<p class="text-gray-600">
				Paleta de colores extraída del logo oficial. Usa estos colores en tus componentes con clases de Tailwind.
			</p>
		</div>

		{Object.entries(colors).map(([key, color]) => (
			<div class="mb-12">
				<div class="mb-4">
					<h2 class="text-2xl font-bold text-gray-800 mb-1">{color.name}</h2>
					<p class="text-gray-600 text-sm">{color.description}</p>
				</div>

				<div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 lg:grid-cols-11 gap-2">
					{color.shades.map((shade) => (
						<div class="group relative">
							<div
								class={`bg-${key}-${shade} h-20 rounded-lg shadow-md hover:shadow-xl transition-all cursor-pointer border border-gray-200`}
								title={`${key}-${shade}`}
							/>
							<div class="mt-2 text-center">
								<p class="text-xs font-mono font-semibold text-gray-700">{shade}</p>
								<p class="text-[10px] font-mono text-gray-500">{key}-{shade}</p>
							</div>
						</div>
					))}
				</div>
			</div>
		))}

		<!-- Ejemplos de uso -->
		<div class="mt-12 pt-8 border-t border-gray-300">
			<h2 class="text-2xl font-bold text-gray-800 mb-6">Ejemplos de Uso</h2>

			<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
				<!-- Botones -->
				<div class="bg-white p-6 rounded-lg shadow-md">
					<h3 class="font-semibold text-lg mb-4">Botones</h3>
					<div class="space-y-3">
						<button class="bg-primary-500 hover:bg-primary-600 text-white px-6 py-2 rounded-lg w-full transition">
							Botón Primary
						</button>
						<button class="bg-secondary-400 hover:bg-secondary-500 text-dark-900 px-6 py-2 rounded-lg w-full transition font-semibold">
							Botón Secondary
						</button>
						<button class="bg-dark-900 hover:bg-dark-800 text-white px-6 py-2 rounded-lg w-full transition">
							Botón Dark
						</button>
						<button class="bg-accent-400 hover:bg-accent-500 text-dark-900 px-6 py-2 rounded-lg w-full transition">
							Botón Accent
						</button>
					</div>
				</div>

				<!-- Cards -->
				<div class="bg-white p-6 rounded-lg shadow-md">
					<h3 class="font-semibold text-lg mb-4">Cards</h3>
					<div class="space-y-3">
						<div class="bg-primary-50 border-l-4 border-primary-500 p-4 rounded">
							<h4 class="font-semibold text-primary-900">Card Primary</h4>
							<p class="text-primary-700 text-sm">Contenido de ejemplo</p>
						</div>
						<div class="bg-secondary-50 border-l-4 border-secondary-400 p-4 rounded">
							<h4 class="font-semibold text-secondary-900">Card Secondary</h4>
							<p class="text-secondary-700 text-sm">Contenido de ejemplo</p>
						</div>
						<div class="bg-dark-900 border-l-4 border-accent-400 p-4 rounded">
							<h4 class="font-semibold text-white">Card Dark</h4>
							<p class="text-primary-300 text-sm">Contenido de ejemplo</p>
						</div>
					</div>
				</div>

				<!-- Gradientes -->
				<div class="bg-white p-6 rounded-lg shadow-md">
					<h3 class="font-semibold text-lg mb-4">Gradientes</h3>
					<div class="space-y-3">
						<div class="bg-gradient-to-r from-primary-500 to-accent-400 p-4 rounded-lg text-white font-semibold text-center">
							Primary to Accent
						</div>
						<div class="bg-gradient-to-r from-dark-900 via-blue-800 to-dark-900 p-4 rounded-lg text-white font-semibold text-center">
							Dark Hero Gradient
						</div>
						<div class="bg-gradient-to-r from-secondary-400 to-secondary-600 p-4 rounded-lg text-dark-900 font-semibold text-center">
							Secondary Gradient
						</div>
					</div>
				</div>

				<!-- Texto -->
				<div class="bg-white p-6 rounded-lg shadow-md">
					<h3 class="font-semibold text-lg mb-4">Texto</h3>
					<div class="space-y-3">
						<p class="text-primary-600 font-semibold">Texto Primary</p>
						<p class="text-secondary-500 font-semibold">Texto Secondary</p>
						<p class="text-dark-900 font-semibold">Texto Dark</p>
						<p class="text-blue-700 font-semibold">Texto Blue</p>
						<p class="text-accent-500 font-semibold">Texto Accent</p>
					</div>
				</div>
			</div>
		</div>

		<!-- Código de ejemplo -->
		<div class="mt-12 pt-8 border-t border-gray-300">
			<h2 class="text-2xl font-bold text-gray-800 mb-4">Cómo Usar</h2>
			<div class="bg-dark-900 text-primary-300 p-6 rounded-lg font-mono text-sm overflow-x-auto">
				<pre>{`<!-- Colores de fondo -->
<div class="bg-primary-500">...</div>
<div class="bg-secondary-400">...</div>
<div class="bg-dark-900">...</div>

<!-- Colores de texto -->
<p class="text-primary-600">...</p>
<p class="text-secondary-500">...</p>

<!-- Bordes -->
<div class="border-primary-500">...</div>

<!-- Hover states -->
<button class="bg-primary-500 hover:bg-primary-600">...</button>

<!-- Gradientes -->
<div class="bg-gradient-to-r from-dark-900 to-blue-800">...</div>`}</pre>
			</div>
		</div>
	</div>
</div>
